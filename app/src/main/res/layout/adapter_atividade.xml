<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imgTipoAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_bike" />

    <TextView
        android:id="@+id/valorKm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="10.0 KM"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/valorDuracao"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="40 minutos"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/valorCaloria"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5000 calorias"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp" />

</LinearLayout>